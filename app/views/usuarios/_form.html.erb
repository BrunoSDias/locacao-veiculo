<%= form_for(@usuario, html: { class: "form-horizontal formUsuario", role: "form" }) do |f| %>
  <% if @usuario.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@usuario.errors.count, "error") %> impediram usuario de ser salva:</h4>

      <ul>
      <% @usuario.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :nome, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :nome, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :cpf, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :cpf, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :endereco, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :endereco, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :numero, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :numero, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :cep, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :cep, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :estado, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :estado, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :login, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :login, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :senha, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.password_field :senha, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div style='text-align: center;'>
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
