<%= form_for(@veiculo, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @veiculo.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@veiculo.errors.count, "error") %> impediram veiculo de ser salva:</h4>

      <ul>
      <% @veiculo.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :nome, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :nome, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :foto, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.file_field :foto %>
      <div>
        <% if @veiculo.foto.attached? %>
          <%= image_tag @veiculo.foto %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :cor, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :cor, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :qnt_passageiros, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :qnt_passageiros, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :placa, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :placa, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :valor, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :valor, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :marca_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :marca_id, Marca.all.collect {|p| [ p.nome, p.id ] } %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
